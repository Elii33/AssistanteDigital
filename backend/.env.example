# Configuration Stripe
# Copiez ce fichier en .env et remplacez les valeurs

# MODE TEST (pour développement)
STRIPE_SECRET_KEY_TEST=sk_test_VOTRE_CLE_SECRETE_TEST_ICI
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_VOTRE_CLE_PUBLIQUE_TEST_ICI

# MODE PRODUCTION (quand vous êtes prêt à accepter de vrais paiements)
STRIPE_SECRET_KEY_LIVE=sk_live_VOTRE_CLE_SECRETE_LIVE_ICI
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_VOTRE_CLE_PUBLIQUE_LIVE_ICI

# Mode actuel (test ou live)
STRIPE_MODE=test

# Configuration serveur
PORT=3000
FRONTEND_URL=http://localhost:4200

# IDs des prix Stripe (à récupérer depuis votre Dashboard Stripe)
PRICE_ID_ESSENTIAL=price_VOTRE_PRICE_ID_ESSENTIAL
PRICE_ID_PRO=price_VOTRE_PRICE_ID_PRO
PRICE_ID_PREMIUM=price_VOTRE_PRICE_ID_PREMIUM
PRICE_ID_HOURLY=price_VOTRE_PRICE_ID_HOURLY
